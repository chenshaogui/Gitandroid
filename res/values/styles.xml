<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="AppBaseTheme" parent="android:Theme.Light"/>
    <style name="AppTheme" parent="AppBaseTheme"/>
    <style name="node_comm_info_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#FF0000FF</item>
        <item name="android:layout_marginTop">9.0dip</item>
        <item name="android:layout_marginLeft">4.0dip</item>
        <item name="android:layout_width">70dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="node_comm_info_edit_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF0000FF</item>
        <item name="android:layout_marginTop">9.0dip</item>
        <item name="android:layout_marginLeft">4.0dip</item>
        <item name="android:layout_width">250dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="button_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF0000FF</item>
        <item name="android:layout_marginTop">9.0dip</item>
        <item name="android:layout_marginLeft">4.0dip</item>
        <item name="android:padding">10.0dip</item>
        <item name="android:layout_width">100.0dip</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/img_bg_shape</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>